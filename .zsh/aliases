alias migbc='sqlz migration:generate --options-path db/billing/.sequelizerc --name'
alias migo='sqlz db:migrate --options-path db/onboarding/.sequelizerc --config db/onboarding/config.js'
alias migou='sqlz db:migrate:undo --options-path db/onboarding/.sequelizerc --config db/onboarding/config.js'
alias migoc='sqlz migration:generate --options-path db/onboarding/.sequelizerc --name'
alias migm='sqlz db:migrate --options-path db/messaging/.sequelizerc --config db/messaging/config.js'
